{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/*.test.ts",
    "src/test.*.ts",
    "lib",
    "node_modules"
  ]
}
